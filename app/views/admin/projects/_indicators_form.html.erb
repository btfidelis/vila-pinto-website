<%= semantic_form_for [:admin, @project] do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :category, :as => :select, :collection => project_category_options %>      
    <%= f.input :visible %>
    <%= f.input :description %>
  <% end %>

  <style>

    .indicator_label_column{ width:20%; float:left; } 
    .indicator_value_column{ width:70%; float:left; }
    .indicator_show_column{ display:block;float:right; width:10% ; text-align:center;  }

    ol li.indicator_attendance_value_group { display:inline; float:left; }

    .project_indicator_label_value_column { display: block;float: left;width: 85%; }
    .project_indicator_label_value_column label { width:23% !important;  }
    .project_indicator_label_value_column input.short_value { width:15% !important;  }
    .project_indicator_label_column { display: block;float: left;width: 19%; }

    .project_indicator_label_column .label_column {  font-size: 1.0em; font-weight: bold;color: #5e6469;}
    .project_indicator_tiny_value_column { display:block; float:left; width:8%; padding-left:0 !important;  }
    .project_indicator_tiny_value_column label { padding-left:0 !important ; }

    .project_indicator_label_half_value_column { display: block;float: left;width: 35%; }
    .project_indicator_label_half_value_column input.short_value { width:36% !important;  }
    .project_indicator_label_half_value_column label { width:56% !important;  }

    .project_indicator_label_unit_value_column  { display:block;float:left;width:30%;  }

    .begin_line { clear:both;  }

  </style>


  <h2><%= I18n.t "indicator_labels.title"   %></h2>
  <p><%= I18n.t "indicator_labels.legend"   %></p>
  <%= f.inputs do %>
    <li>
      <div class='indicator_label_column'><span > <%= I18n.t "indicator_labels.description"   %>  </span>  </div>
      <div class='indicator_value_column'> <span><%= I18n.t "indicator_labels.value"   %> </span>  </div>
      <div class='indicator_show_column'> <span><%= I18n.t "indicator_labels.show"   %> </span> </div>
    </li>
    <%= f.input :attendance_value, :input_html => { :class => 'short_value'  }, :wrapper_html => { :class => 'project_indicator_label_value_column' } %>
    <%= f.input :show_attendance, :label=>'',  :wrapper_html => { :class => 'indicator_show_column' } %>
    <li class= 'project_indicator_label_column' >
      <span class='label_column' ><%=  I18n.t "activerecord.attributes.project.attendance_days" %> </span>
    </li>

    <%= f.input :attendance_day_monday, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  }   %>
    <%= f.input :attendance_day_tuesday , :wrapper_html => { :class => 'project_indicator_tiny_value_column'  } %>
    <%= f.input :attendance_day_wednesday, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  } %>
    <%= f.input :attendance_day_thursday, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  } %>
    <%= f.input :attendance_day_friday, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  }%>
    <%= f.input :attendance_day_saturday, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  }%>
    <%= f.input :attendance_day_sunday, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  }%>
    <%= f.input :show_attendance_days, :label => '',  :wrapper_html => { :class => 'indicator_show_column' } %>

    <%= f.input :frequency_value, :input_html => { :class => 'short_value'  },  :wrapper_html => { :class => 'begin_line project_indicator_label_half_value_column' } %>
    <%= f.input :frequency_unit, :label => '',  :as => :select, :collection => project_frequency_unit_options, :wrapper_html => { :class => 'project_indicator_label_unit_value_column' }  %>
    <%= f.input :show_frequency, :label => '', :wrapper_html => { :class => 'indicator_show_column' }  %>

    <li class= 'begin_line project_indicator_label_column' >
      <span class='label_column' > <%=  I18n.t "activerecord.attributes.project.attendance_shift" %>  </span>
    </li>

    <%= f.input :attendance_shift_morning, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  } %>
    <%= f.input :attendance_shift_afternoon, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  } %>
    <%= f.input :attendance_shift_night, :wrapper_html => { :class => 'project_indicator_tiny_value_column'  }  %>
    <%= f.input :show_attendance_shift, :label => '',  :wrapper_html => { :class => 'indicator_show_column' }  %>

    <%= f.input :attendance_goal_value, :input_html => { :class => 'short_value'  }, :wrapper_html => { :class => 'project_indicator_label_value_column' }  %>
    <%= f.input :show_attendance_goal, :label=>'',  :wrapper_html => { :class => 'indicator_show_column' }  %>

    <%= f.input :meals_quantity_value, :input_html => { :class => 'short_value'  },  :wrapper_html => { :class => 'begin_line project_indicator_label_half_value_column' }  %>
    <%= f.input :meals_quantity_unit, :label=>'',  :as => :select, :collection => project_meals_options, :wrapper_html => { :class => 'project_indicator_label_unit_value_column' }  %>
    <%= f.input :show_meals_quantity, :label => '', :wrapper_html => { :class => 'indicator_show_column' } %>

    <%= f.input :available_spots, :input_html => { :class => 'short_value'  }, :wrapper_html => { :class => 'begin_line project_indicator_label_value_column' } %>
    <%= f.input :show_available_spots, :label => '', :wrapper_html => { :class => 'indicator_show_column' }  %>

  <% end %>

  <%= f.actions %>

<% end %>
